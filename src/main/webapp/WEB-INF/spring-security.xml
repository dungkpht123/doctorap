<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
                 http://www.springframework.org/schema/security
                 http://www.springframework.org/schema/security/spring-security.xsd
                 http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans.xsd">

    
	<http auto-config="true" use-expressions="true">
        <!-- Cấu hình các URL được phép truy cập -->
        <intercept-url pattern="/login" access="permitAll" />
        <intercept-url pattern="/register" access="permitAll" />
        <intercept-url pattern="/verify" access="permitAll" />

        <!-- Cấu hình quyền truy cập theo vai trò -->
        <intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/doctor/**" access="hasRole('ROLE_DOCTOR')" />
        <intercept-url pattern="/user/**" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN' ,'ROLE_DOCTOR')" />
		<custom-filter ref="customLoginFilter" after="FORM_LOGIN_FILTER"/>
		
        <!-- Cấu hình trang login -->
        <form-login 
            login-page="/login"
            login-processing-url="/login-success"
            default-target-url="/home"
            authentication-failure-url="/login?error=true"
            username-parameter="email"
            password-parameter="password" />

        <!-- Cấu hình logout -->
        <logout 
            logout-url="/logout"
            logout-success-url="/login?logout=true" />

        <!-- Cấu hình CSRF -->
        <csrf disabled="true"/>
    </http>

    <!-- Cấu hình quản lý xác thực -->
    <authentication-manager>
        <authentication-provider ref="customAuthenticationProvider"/>
    </authentication-manager>
	<beans:bean id="customLoginFilter" class="fpt.fa.security.CustomLoginFilter"/>

    <!-- Định nghĩa CustomAuthenticationProvider bean -->
    <beans:bean id="customAuthenticationProvider" class="fpt.fa.security.CustomAuthenticationProvider"/>
</beans:beans>
